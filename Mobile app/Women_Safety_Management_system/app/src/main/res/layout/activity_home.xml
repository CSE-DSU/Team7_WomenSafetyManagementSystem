<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.android_sms_receivealert.HomeActivity"
    android:background="@drawable/bg1" >

  <TextView
      android:id="@+id/text"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:gravity="center"
      android:textSize="16dp"
      android:text="WOMEN SAFETY MANAGEMENT SYSTEM"
      android:textColor="#000000"
      android:textStyle="bold" />
  
    <Button
        android:id="@+id/authorize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
    	android:gravity="center"
        android:layout_below="@+id/toggleButton1"
        android:text="Add Authorize" 
        
        />
    <!-- android:visibility="gone" -->

    
     <Button
         android:id="@+id/panic"
         android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/authorize"
         android:text="Panic" />
    

  <Button
        android:id="@+id/weather"
        android:layout_width="match_parent"
       android:layout_height="40dp"
        android:layout_below="@+id/panic"
        android:text="Weather" /> 

    <Button
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/weather"
        android:text="Location" />
    
  <Button
        android:id="@+id/zone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/location"
        android:text="Geo-fencing" /> 
    
  
     <Button
        android:id="@+id/cpolice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       	android:layout_below="@+id/zone"
        android:text="Police station" />
     
      <Button
          android:id="@+id/cengine"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/cpolice"
          android:text=" Ambulance" />

<Button
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
      android:layout_below="@+id/cengine"
       
        android:text="Change Password" />
    

     <Button
         android:id="@+id/logout"
         android:layout_width="match_parent"
         android:layout_height="40dp"
          android:layout_below="@+id/pass"
        
         android:text="Logout" />

     <ToggleButton
         android:id="@+id/toggleButton1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:layout_below="@+id/text"
         android:text="ToggleButton1"
         android:textOff="Off"
         android:textOn="On" />

     <Button
         android:id="@+id/btnStop"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/authorize"
         android:layout_alignRight="@+id/authorize"
         android:text="Stop"
         android:visibility="invisible" />

</RelativeLayout>
